<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="172dp"
        android:text="Crear un nuevo AlbÃºm"
        app:layout_constraintBottom_toTopOf="@+id/id_album"
        tools:layout_editor_absoluteX="136dp" />

    <EditText
        android:id="@+id/id_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Id del Album"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/id_nombre_album"
        app:layout_constraintEnd_toEndOf="@+id/id_nombre_album"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/id_nombre_album" />

    <EditText
        android:id="@+id/id_nombre_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Nombre del album"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/id_num_canciones"
        app:layout_constraintEnd_toEndOf="@+id/id_num_canciones"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/id_num_canciones" />

    <EditText
        android:id="@+id/id_num_canciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Numero de canciones"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/id_precio_album"
        app:layout_constraintEnd_toEndOf="@+id/id_precio_album"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/id_precio_album" />

    <EditText
        android:id="@+id/id_precio_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:ems="10"
        android:hint="Precio del album"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btn_crear_new_album"
        app:layout_constraintEnd_toEndOf="@+id/btn_crear_new_album"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/btn_crear_new_album" />

    <Button
        android:id="@+id/btn_crear_new_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.847" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="149dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toTopOf="@+id/id_album"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/nuevo_album" />

</androidx.constraintlayout.widget.ConstraintLayout>